{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "./src",
		"lib": [
			"esnext"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"newLine": "lf",
		"noEmit": true,
		"outDir": "./build",
		"paths": {
			"@cdv/signal": [
				"./index.ts"
			],
			"~/*": [
				"*"
			]
		},
		"skipLibCheck": true,
		"strict": true,
		"stripInternal": true,
		"types": [],
		"target": "esnext"
	},
	"include": [
		"./src/**/*"
	]
}
