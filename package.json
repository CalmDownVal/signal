{
	"name": "@calmdownval/signal",
	"description": "A lightweight event dispatcher with async handler support.",
	"version": "3.1.0",
	"license": "ISC",
	"type": "commonjs",
	"main": "./build/index.cjs.min.js",
	"module": "./build/index.esm.min.js",
	"types": "./build/index.d.ts",
	"exports": {
		".": {
			"require": "./build/index.cjs.min.js",
			"default": "./build/index.esm.min.js"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/CalmDownVal/signal.git"
	},
	"keywords": [
		"signal",
		"event",
		"listener",
		"dispatcher",
		"async",
		"asynchronous"
	],
	"scripts": {
		"benchmark": "ts-node ./benchmark/index.ts",
		"build": "rollup --config",
		"lint": "eslint ./src/**/*.ts ./test/**/*.ts",
		"prepublishOnly": "yarn build && yarn lint && yarn test",
		"test": "ts-mocha -p ./test/tsconfig.json ./test/**/*.ts"
	},
	"devDependencies": {
		"@calmdownval/eslint-config": "1.0.1",
		"@calmdownval/eslint-import-resolver-typescript": "1.1.0",
		"@rollup/plugin-typescript": "8.3.0",
		"@types/benchmark": "2.1.1",
		"@types/mocha": "9.1.0",
		"@types/node": "17.0.18",
		"@types/sinon": "10.0.11",
		"@typescript-eslint/eslint-plugin": "5.12.0",
		"@typescript-eslint/parser": "5.12.0",
		"benchmark": "2.1.4",
		"eslint": "8.9.0",
		"eslint-plugin-import": "2.25.4",
		"mocha": "9.2.0",
		"rollup": "2.67.2",
		"rollup-plugin-delete": "2.0.0",
		"rollup-plugin-dts": "4.1.0",
		"rollup-plugin-terser": "7.0.2",
		"sinon": "13.0.1",
		"ts-mocha": "9.0.2",
		"ts-node": "10.5.0",
		"typescript": "4.5.5",
		"tslib": "2.3.1"
	},
	"resolutions": {
		"ts-mocha/ts-node": "10.5.0"
	}
}
