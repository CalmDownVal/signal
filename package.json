{
	"name": "@calmdownval/signal",
	"description": "A lightweight event dispatcher.",
	"version": "1.0.3",
	"license": "ISC",
	"type": "commonjs",
	"main": "./build/cjs/index.js",
	"module": "./build/mjs/index.mjs",
	"types": "./build/cjs/index.d.ts",
	"exports": {
		".": {
			"require": "./build/cjs/index.js",
			"default": "./build/mjs/index.mjs"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/CalmDownVal/signal.git"
	},
	"keywords": [
		"signal",
		"event",
		"async",
		"dispatcher"
	],
	"scripts": {
		"build": "./script/build.sh",
		"prepublishOnly": "yarn build",
		"test": "ts-mocha -p ./config/tsconfig.mocha.json ./src/tests/**/*.ts"
	},
	"devDependencies": {
		"@types/mocha": "8.2.x",
		"@types/node": "14.14.x",
		"@types/sinon": "9.0.x",
		"@typescript-eslint/eslint-plugin": "4.9.x",
		"@typescript-eslint/parser": "4.9.x",
		"eslint": "7.15.x",
		"eslint-import-resolver-typescript": "2.3.x",
		"eslint-plugin-import": "2.22.x",
		"mocha": "8.2.x",
		"sinon": "9.2.x",
		"ts-mocha": "8.0.x",
		"typescript": "4.1.x"
	},
	"resolutions": {
		"mocha/debug": ">=4.3.1",
		"*/lodash": ">=4.17.19"
	}
}
